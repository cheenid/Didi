<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_left_layout_bj"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:minHeight="590dp">

        <LinearLayout
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="55dp"
                android:scaleType="fitXY"
                android:src="@mipmap/photo"
                app:riv_border_width="0dip"
                app:riv_corner_radius="100dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:text="186****7106"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/didi_mem"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="普通会员"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_menu"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collect"
                    style="@style/MenuStyle"
                    android:drawableLeft="@mipmap/trip"
                    android:drawablePadding="10dp"
                    android:text="@string/share" />

                <TextView
                    android:id="@+id/tv_mydown"
                    style="@style/MenuStyle"
                    android:drawableLeft="@mipmap/wallet"
                    android:drawablePadding="10dp"
                    android:text="@string/fuli" />

                <TextView
                    android:id="@+id/tv_fuli"
                    style="@style/MenuStyle"
                    android:drawableLeft="@mipmap/customer_server"
                    android:drawablePadding="10dp"
                    android:text="@string/collection" />

                <TextView
                    android:id="@+id/tv_share"
                    style="@style/MenuStyle"
                    android:drawableLeft="@mipmap/setting"
                    android:drawablePadding="10dp"
                    android:text="@string/download" />


            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/darker_gray" />
    </RelativeLayout>

</LinearLayout>